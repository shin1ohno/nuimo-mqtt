    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "chai-change": "^2.1.2",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "2.4.1",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.5.2"
  }
